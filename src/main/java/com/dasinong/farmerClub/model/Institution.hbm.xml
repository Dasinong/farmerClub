<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.dasinong.farmerClub.model.Institution" table="institution" catalog="farmer_club">
        <id name="id" type="long">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="name" type="string">
        	<column name="name" length="20"/>
        </property>
        <property name="code" type="string">
            <column name="code" length="20"/>
        </property>
        <bag name="couponCampaigns" table="couponCampaign" inverse="false" lazy="true" fetch="select">
            <key>
                <column name="institutionId" not-null="true" />
            </key>
            <one-to-many class="com.dasinong.farmerClub.model.CouponCampaign"></one-to-many>
        </bag>
    </class>

</hibernate-mapping>